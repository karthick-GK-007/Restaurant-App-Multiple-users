{
  "buildCommand": "node build.js",
  "rewrites": [
    {
      "source": "/kagzso/admin/:hotel/:branch*",
      "destination": "/admin.html?path=/kagzso/admin/:hotel/:branch*"
    },
    {
      "source": "/kagzso/admin/:hotel",
      "destination": "/admin.html?path=/kagzso/admin/:hotel"
    },
    {
      "source": "/kagzso/user/:hotel/:branch*",
      "destination": "/index.html?path=/kagzso/user/:hotel/:branch*"
    },
    {
      "source": "/kagzso/user/:hotel",
      "destination": "/index.html?path=/kagzso/user/:hotel"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
